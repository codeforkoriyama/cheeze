{% set dir = constant('_DIR_') %}
{% set dir_js = ini.dir_js %}
<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8">
  <meta content="on" http-equiv="x-dns-prefetch-control">
  <title>管理画面 | Code for KORIYAMA</title>
  <meta name="author" content="code for KORIYAMA">
  <meta name="viewport" content="width=device-width,user-scalable=no,initial-scale=1,maximum-scale=1">
  <meta name="description" content="{{ ini.description }}">
  <link href="//maxcdn.bootstrapcdn.com" rel="dns-prefetch">
  <link href="//ajax.googleapis.com" rel="dns-prefetch">
  <link href="//maps.googleapis.com" rel="dns-prefetch">
  <link rel="shortcut icon" type="image/x-icon" href="{{ dir }}/favicon.ico">
  <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
  <link rel="stylesheet" href="{{ dir }}/common/css/backend/style.css" media="all">
  {% block css %}{% endblock css %}

  <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
  <script>
    window.jQuery || document.write('<script src="{{ dir }}/common/js/libs/jquery.min.js"><\/script>');
  </script>
  <script src="{{ dir }}/common/{{ dir_js }}/Assets.js"></script>
  <script src="{{ dir }}/common/js/libs/library-set.js"></script>

  {% block header_script %}{% endblock %}
</head>
<body>

{% block contents %}{% endblock %}

<div id="modal" class="hide">
  <div id="modal-area">
    <div id="modal-bg"></div>
    <div id="modal-contents" class="jsClick-Modal"></div>
  </div>
  <!-- /#modal-area -->
</div>

{% block footer_script %}{% endblock %}
</body>
</html>
